{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "include": [
      "./src/**/*.(ts|tsx)",
      "./tests/**/*.ts",
      "./stories/**/*.(ts|tsx)"
  ]
}
